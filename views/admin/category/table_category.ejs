<table class="table table-striped" id="departemen">
    <thead>                                 
      <tr>
        <th class="text-center">No</th>
        <th>Nama Departemen</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>                                 
      <% for(let i = 0; i < category.length; i++) { %>
        <tr>
            <td class="text-center"><%= i + 1 %></td>
            <td><%= category[i].name %></td>
            <td>
                <form action="/departemen/delete/<%= category[i]._id %>?_method=DELETE" method="POST">
                    <a href="/departemen/edit/<%= category[i]._id %>" class="btn btn-warning">
                        <i class="fas fa-pencil-alt"></i>
                        Ubah
                    </a>
                    <button class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Hapus
                    </button>
                    
                </form>
            </td>
        </tr>
    <% } %>
    </tbody>
  </table>